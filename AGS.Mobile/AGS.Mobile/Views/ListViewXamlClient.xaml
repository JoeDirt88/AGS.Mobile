<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AGS.Mobile.Views.ListViewXamlCnt"
             Title="Client Data"
             Style="MainTheme">
    <StackLayout>
        <!-- Title info label -->
        <Label Text="Please enter new patient details:"
               FontSize="Medium"
               TextColor="Black"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start"/>
        <!-- Populating list view -->
        <ListView x:Name="LstViewCnt">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <EntryCell Label="{Binding SurQuestion}"
                               Text="{Binding TextData}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- Action BTN -->
        <Button Text="Verify details"
                Clicked="Button_Clicked_CNT_save"
                VerticalOptions="End"/>
        <Button Text="Cancel"
                Clicked="Button_Clicked_RET"
                VerticalOptions="End"/>
    </StackLayout>
</ContentPage>
